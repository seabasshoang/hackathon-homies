{
  "manifest_version": 2,
  "version": "1.3",
  "name": "hackathon-homies",
  "description": "slow fashion, quick maths",
  "author": "Joko Sanyang, Freddie Preece, Sylvia Hoang",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "https://currency-converter5.p.rapidapi.com"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["assets/*.png"],
  "icons": {
    "16": "./assets/terrapin16.png",
    "48": "./assets/terrapin48.png",
    "128": "./assets/terrapin128.png"
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*/*anorak*",
        "https://*/*apron*",
        "https://*/*baseball-cap*",
        "https://*/*belt*",
        "https://*/*bikini*",
        "https://*/*blazer*",
        "https://*/*blouse*",
        "https://*/*boots*",
        "https://*/*bow-tie*",
        "https://*/*boxers*",
        "https://*/*bra*",
        "https://*/*cardigan*",
        "https://*/*coat*",
        "https://*/*dress*",
        "https://*/*dressing-gown*",
        "https://*/*gloves*",
        "https://*/*hat*",
        "https://*/*high-heels*",
        "https://*/*jacket*",
        "https://*/*jeans*",
        "https://*/*jumpsuit*",
        "https://*/*jumper*",
        "https://*/*knickers*",
        "https://*/*leather-jacket*",
        "https://*/*leggings*",
        "https://*/*miniskirt*",
        "https://*/*nightie*",
        "https://*/*overalls*",
        "https://*/*overcoat*",
        "https://*/*pullover*",
        "https://*/*pyjamas*",
        "https://*/*raincoat*",
        "https://*/*sandals*",
        "https://*/*scarf*",
        "https://*/*shirt*",
        "https://*/*shoelace*",
        "https://*/*shoes*",
        "https://*/*shorts*",
        "https://*/*skirt*",
        "https://*/*slippers*",
        "https://*/*socks*",
        "https://*/*stilettos*",
        "https://*/*stockings*",
        "https://*/*suit*",
        "https://*/*sweater*",
        "https://*/*sweatshirt*",
        "https://*/*swimming-costume*",
        "https://*/*swimming-trunks*",
        "https://*/*thong*",
        "https://*/*tie*",
        "https://*/*tights*",
        "https://*/*top*",
        "https://*/*tracksuit*",
        "https://*/*trainers*",
        "https://*/*trousers*",
        "https://*/*t-shirt",
        "https://*/*underpants",
        "https://*/*vest*",
        "https://*/*wellingtons*"
      ],
      "run_at": "document_idle",
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}
